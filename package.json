{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/logic-circuit"
    ]
  },
  "license": "MIT",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start": "npm run serve --prefix ./packages/aristotle",
    "dev": "lerna run dev --parallel --stream --concurrency",
    "docs:dev": "vuepress dev docs --temp .temp",
    "docs:build": "vuepress build docs",
    "build": "yarn docs:build && lerna run build",
    "deploy:upload": "s3-deploy './dist/**' --cwd './dist/' --bucket aristotle.dev --distId=EN33VBMBY3F3W --invalidate '.'",
    "deploy": "deploy-aws-s3-cloudfront --bucket aristotle.dev --source ./dist --distribution EN33VBMBY3F3W"
  },
  "devDependencies": {
    "deploy-aws-s3-cloudfront": "^1.0.0",
    "lerna": "^2.11.0",
    "s3-deploy": "^1.3.0",
    "vuepress": "1.0.0-alpha.44",
    "vuepress-theme-vue": "1.0.3"
  },
  "engines": {
    "node": ">= 8",
    "yarn": ">=1.5.1"
  }
}
