{
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:app": "yarn workspace @aristotle/app run start",
    "start:circuit": "yarn workspace @aristotle/circuit run start",
    "start": "npm-run-all -p start:app start:circuit",
    "build:app": "yarn workspace @aristotle/app build",
    "build:circuit": "yarn workspace @aristotle/circuit build",
    "build:website": "yarn workspace @aristotle/website build",
    "build": "yarn build:website && yarn build:circuit && yarn build:app"
  },
  "engines": {
    "node": ">=14",
    "yarn": ">=1.22.0"
  },
  "packageManager": "yarn@1.22.14",
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
